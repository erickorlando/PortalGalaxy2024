@typeparam TItem

<button type="button" class="btn btn-secondary" @onclick="() => BotonEditar.InvokeAsync(Item)">
    <i class="bi bi-pencil-fill"></i>
</button>
<button type="button" class="btn btn-danger" @onclick="() => BotonEliminar.InvokeAsync(Item)">
    <i class="bi bi-trash-fill"></i>
</button>

@code {

    [Parameter]
    [EditorRequired]
    public TItem Item { get; set; } = default!;

    [Parameter]
    public EventCallback<TItem> BotonEditar { get; set; }

    [Parameter] 
    public EventCallback<TItem> BotonEliminar { get; set; }
}
